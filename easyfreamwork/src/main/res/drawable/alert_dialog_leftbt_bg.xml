<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border color 边框的颜色-->
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="18dp"
                android:radius="0dp"/>
            <solid android:color="@color/gray_line"/>
        </shape>
    </item>
    <!-- content background 内容背景色 其中android:left="3dp" 意为左边框 -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0.5dp">
        <shape>
            <corners
                android:bottomLeftRadius="18dp"
                android:radius="0dp">
            </corners>
            <solid android:color="@android:color/white"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>
    </item>
</layer-list>  